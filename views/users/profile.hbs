<section class="profile-section d-flex align-items-end">
</section>

<section>
    <div class="container py-5">

        <div class="row">
            <div class="col-lg-4 mt-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <div id="profile">
                            {{#if userData.profileImage}}
                            <img src="/images/user-images/{{userData.profileImage}}" alt="">
                            {{else}}
                            <img src="https://icon-library.com/images/profile-image-icon/profile-image-icon-24.jpg"
                                alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                            {{/if}}
                        </div>
                        <h5 class="my-4">{{userData.firstname}} {{userData.lastname}} {{#if userData.verified}} <span><i
                                    class="fas fa-check text-primary"></i></span>{{/if}}</h5>
                    </div>
                   <p class="ms-3"><i class="fas fa-wallet text-success"></i> Wallet Balance: &nbsp &nbsp <span class="fw-bold">â‚¹ {{walletBalance}}</span> </p>
                </div>

            </div>
            <div class="col-lg-8">
                <div class="d-flex justify-content-end pe-3">
                    <a href="/edit-profile" class="text-decoration-none">
                        <h6>Edit profile <i class="far fa-edit "></i></h6>
                    </a>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{userData.firstname}} {{userData.lastname}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{userData.email}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{userData.phoneno}}</p>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{userData.address}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Licence Photo</p>
                            </div>
                            <div class="col-sm-6">
                                <div id="licence" class="mb-2">
                                    {{#if userData.licenceImage}}
                                    <img src="/images/user-images/{{userData.licenceImage}}" alt="">
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>