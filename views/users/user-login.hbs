<section class="h-100 gradient-form" style="background-color: rgb(255, 255, 255);">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10 col-xl-4">
                <div class="card rounded-9 text-black border border-primary">
                    <div class="row g-0">
                        <div class="col-lg-12">
                            <div class="card-body mx-md-4">

                                <form onsubmit="return logvalid()" action="/login" method="post">
                                    <div class="text-center mb-4">
                                        <h3>LOGIN</h3>
                                    </div>
                                    {{#if loginError}}
                                    <div class="alert alert-danger" role="alert">
                                        Invalid username or password
                                    </div>
                                    {{/if}}
                                        <p id="emailmsg" class="text-danger"></p>
                                    <div class="form-outline mb-4">
                                        <input type="email" name="email" id="email" class="form-control" />
                                        <label class="form-label " for="form2Example11">Email</label>
                                    </div>
                                    

                                    <div class="form-outline mb-4">
                                        <input type="password" name="password" class="form-control " />
                                        <label class="form-label " for="form2Example22">Password</label>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1 ">
                                        <div class="d-flex justify-content-center">

                                            <button 
                                                class="btn btn-primary btn-sm fa-lg gradient-custom-2 mb-3 rounded-3"
                                                type="submit">Log in</button>
                                        </div>
                                        <a class="text-muted" href="#!">
                                            <p>Forgot password?</p>
                                        </a>
                                    </div>
                                </form>
                                <form action="/login-otp" method="post">
                                    {{#if usernotExists}}
                                    <div class="alert alert-danger" role="alert">
                                        This Mobile no dosen't exists
                                    </div>
                                    {{/if}}
                                    <div class="form-outline mb-4">
                                        <input type="number" id="form2Example22" name="phoneno" class="form-control " />
                                        <label class="form-label " for="form2Example22">Enter mobile No</label>
                                    </div>
                                    <div class="d-flex justify-content-center text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-sm fa-lg gradient-custom-2 mb-3 rounded-3"
                                            type="submit">Sent OTP</button>
                                    </div>
                                </form>
                                <div class="d-flex align-items-center justify-content-center pb-4">
                                    <p class="mb-0 me-2">Don't have an account?</p>
                                    <a href="/signup" type="button"
                                        class="btn btn-outline-danger btn-sm rounded-1">Create new</a>
                                </div>



                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>